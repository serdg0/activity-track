<%= form_with model: [:activity, @entry] do |f| %>
  <%= render "shared/errors" if @entry.errors.any? %>
  <%= label_tag(:from_time, "From") %>
  <%= f.time_field :from_time %>
  <% p params %>
  <%= label_tag(:to_time, "To") %>
  <%= f.time_field :to_time %>

  <%= label_tag(:date, "Date") %>
  <%= f.date_field :date %>

  <%= f.submit "Create" %>
<% end %>
